<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/main.css">
</head>
<body>
    <header class="header">
        <div class="logo">
            <a href="/">
                Logo
            </a>
        </div>
        <div class="site-title">
            Kendrick kl√¶r
        </div>
        <div class="nav-right">
            <% if (isAuthenticated) { %>
                <% if (isAdmin) { %>
                    <a href="/dashboard">Admin</a> |
                <% } %>
                <a href="/profile"><%= locals.user ? user.navn : '[innlogget brukernavn]' %></a> |
                <a href="/logout">log out</a>
            <% } else { %>
                <a href="/login">log in</a>
            <% } %>
        </div>
    </header>
    

    <main>
        <h1><%= category.name %> (<%= category.type %>)</h1>
        
        <p><%= category.description %></p>
        
        <section class="products">
            <% if (products.length === 0) { %>
                <p>Ingen produkter funnet i denne kategorien.</p>
            <% } else { %>
                <div class="product-grid">
                    <% products.forEach(product => { %>
                        <div class="product-card">
                            <a href="/product/<%= product._id %>">
                                <% if (product.images && product.images.length > 0) { %>
                                    <img src="<%= product.images[0] %>" alt="<%= product.name %>">
                                <% } else { %>
                                    <div class="placeholder-image"></div>
                                <% } %>
                                <h3><%= product.name %></h3>
                                <p class="price"><%= product.price %> kr</p>
                                <p class="description"><%= product.description %></p>
                            </a>
                            <button class="add-to-cart">Legg i handlevogn</button>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </section>
    </main>
    
    <footer>
        <p>&copy; 2025 T-skjorter og gensere for rockeband</p>
    </footer>
</body>
</html>