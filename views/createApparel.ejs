<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Apparel</title>
    <link rel="stylesheet" href="/main.css">
</head>
<body>
    <header>
        <nav>
            <a href="/">Hjem</a>
            <a href="/dashboard">Admin Dashboard</a>
        </nav>
    </header>

    <main>
        <h1>Create New Apparel</h1>
        
    
        
        <form action="/apparel" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Apparel Navn *</label>
                <input type="text" id="name" name="name" required>
            </div>
            
            <div class="form-group">
                <label for="description">Beskrivelse * (maks 100 tegn)</label>
                <textarea id="description" name="description" maxlength="100" required></textarea>
                <small class="char-count"><span id="char-count">0</span>/100</small>
            </div>
            
            
            <div class="form-group">
                <label for="subgenre">sub genre</label>
                <input type="text" id="subgenre">
                <!-- <select id="genre" name="genre" required>
                    <option value="">Velg kategori</option>
                    <% genres.forEach(genre => { %>
                        <% if (genre.type === 'genser' || genre.type === 't-skjorte') { %>
                            <option value="<%= genre._id %>"><%= genre.name %> (<%= genre.type %>)</option>
                        <% } %>
                    <% }); %>
                </select> -->
            </div>
            
            <div class="form-group">
                <label for="images">Bilder *</label>
                <input type="file" id="images" name="images" class="fileInput" accept="image/png, image/jpeg, image/jpg" required>
                <small>Minst ett bilde er påkrevd</small>
            </div>
            
            <button type="submit" class="submit-btn">Lag genre</button>
        </form>
    </main>
    
    <footer>
        <p>&copy; 2025 T-skjorter og gensere for rockeband</p>
    </footer>
    
    <script>
        // Character counter for description
        const descriptionField = document.getElementById('description');
        const charCount = document.getElementById('char-count');
        
        descriptionField.addEventListener('input', function() {
            const currentLength = this.value.length;
            charCount.textContent = currentLength;
            
            // Visual feedback if approaching limit
            if (currentLength > 80) {
                charCount.style.color = 'orange';
            } else if (currentLength > 90) {
                charCount.style.color = 'red';
            } else {
                charCount.style.color = 'inherit';
            }
        });
        
        // Form validation
        const form = document.querySelector('form');
        form.addEventListener('submit', function(event) {
            const fileInput = document.getElementById('images');
            const genreSelect = document.getElementById('genre');
            
            if (!fileInput.files || fileInput.files.length === 0) {
                alert('Du må laste opp minst ett bilde.');
                event.preventDefault();
                return false;
            }
            
            if (!genreSelect.value) {
                alert('Du må velge en kategori.');
                event.preventDefault();
                return false;
            }
        });
    </script>
</body>
</html>