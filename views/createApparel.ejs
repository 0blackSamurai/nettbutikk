<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Apparel Category</title>
    <link rel="stylesheet" href="/main.css">
</head>
<body>
    <header>
        <nav>
            <a href="/">Hjem</a>
            <a href="/dashboard">Admin Dashboard</a>
        </nav>
    </header>

    <main>
        <h1>Create New Apparel Category</h1>
        
        
        <form action="/category" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Category Navn *</label>
                <input type="text" id="name" name="name" required>
            </div>
            
            <div class="form-group">
                <label for="description">Beskrivelse * (maks 100 tegn)</label>
                <textarea id="description" name="description" maxlength="100" required></textarea>
                <small class="char-count"><span id="char-count">0</span>/100</small>
            </div>
            
            <div class="form-group">
                <label for="type">Type plagg *</label>
                <select id="type" name="type" required>
                    <option value="">Velg type</option>
                    <option value="genser">Genser</option>
                    <option value="t-skjorte">T-skjorte</option>
                </select>
            </div>
            
            <div class="form-group">
                <label for="image">Bilde *</label>
                <input type="file" id="image" name="image" class="fileInput" accept="image/png, image/jpeg, image/jpg" required>
                <small>Ett bilde er påkrevd</small>
            </div>
            
            <button type="submit" class="submit-btn">Lag kategori</button>
        </form>
    </main>
    
    <footer>
        <p>&copy; 2025 T-skjorter og gensere for rockeband</p>
    </footer>
    
    <script>
        // Character counter for description
        const descriptionField = document.getElementById('description');
        const charCount = document.getElementById('char-count');
        
        descriptionField.addEventListener('input', function() {
            const currentLength = this.value.length;
            charCount.textContent = currentLength;
            
            // Visual feedback if approaching limit
            if (currentLength > 80) {
                charCount.style.color = 'orange';
            } else if (currentLength > 90) {
                charCount.style.color = 'red';
            } else {
                charCount.style.color = 'inherit';
            }
        });
        
        // Form validation
        const form = document.querySelector('form');
        form.addEventListener('submit', function(event) {
            const fileInput = document.getElementById('image');
            const typeSelect = document.getElementById('type');
            
            if (!fileInput.files || fileInput.files.length === 0) {
                alert('Du må laste opp et bilde.');
                event.preventDefault();
                return false;
            }
            
            if (!typeSelect.value) {
                alert('Du må velge en type plagg.');
                event.preventDefault();
                return false;
            }
        });
    </script>
</body>
</html>